#include <Wire.h>
#include <Adafruit_MLX90614.h>

Adafruit_MLX90614 mlx = Adafruit_MLX90614();

int pulsePin = A0;
int signal;
float temp;

void setup() {
  Serial.begin(9600);
  mlx.begin();
}

void loop() {
  signal = analogRead(pulsePin);
  temp = mlx.readObjectTempC();

  Serial.print("Heartbeat: ");
  Serial.print(signal);
  Serial.print(" | Temperature: ");
  Serial.println(temp);

  delay(1000);
}
